ORG 800H
CALL WPROWADZENIE
CALL HEKSADECYMALNIE
CALL BINARNIE
HLT
WPROWADZENIE
LXI H,WPROWADZENIE_T
RST 3
RST 2
MVI B,'0'
SUB B
MOV B,A
RST 2
MVI C,'0'
SUB C
MOV C,A
RST 2
MVI D,'0'
SUB D
MOV D,A
WAL_1LICZBA
MVI A,02H
SUB B
JM WPROWADZENIE
JZ WAL_BAJT
JNZ PETLAMN
WAL_BAJT
MVI A,05H
SUB C
JM WPROWADZENIE
MVI A,05H
SUB D
JM WPROWADZENIE
JNZ PETLAMN
PETLAMN
MVI E,100
MVI A,00H
MN_B
ADD B
DCR E
JNZ MN_B
MOV B,A
MVI E,10
MVI A,00H
MN_C
ADD C
DCR E
JNZ MN_C
MOV C,A
MVI A,00H
ADD B
ADD C
ADD D
RET
BINARNIE
LXI H,BINARNIE_T
RST 3
MVI B,8
PETLA1
RLC
JC PETLA2
MOV C,A
MVI A,'0'
RST 1
MOV A,C
JMP KONIEC
PETLA2
MOV C,A
MVI A,'1'
RST 1
MOV A,C
KONIEC
DCR B
JNZ PETLA1
RET
HEKSADECYMALNIE
LXI H,HEKSA_T
RST 3
RST 4
RET
WPROWADZENIE_T DB 10,13,'WPROWADZ LIBCZE: ',10,13,'@'
BINARNIE_T DB 10,13,'LICZBA BINARNIE: ',10,13,'@'
HEKSA_T DB 10,13,'LICZBA HEKSADECYMALNIE: ',10,13,'@'
