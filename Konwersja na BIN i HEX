	 ORG 800H  
	 LXI H,TEKST3  
	 RST 3  
	 CALL WPROWADZENIE  
	 MVI B,8  
	 CALL TEKSTY  
;zamiana binarna
PETLA0  
	 RLC  
	 JC PETLA1  
	 MOV C,A  
	 MVI A,'0'  
	 RST 1  
	 MOV A,C  
	 JMP KONIEC  
PETLA1  
	 MOV C,A  
	 MVI A,'1'  
	 RST 1  
	 MOV A,C  
KONIEC  
	 DCR B  
	 JNZ PETLA0  
	 HLT  
TEKSTY  
	 LXI H,SPACJA  
	 RST 3  
	 LXI H,TEKST1  
	 RST 3  
	 RST 4  
	 LXI H,SPACJA  
	 RST 3  
	 LXI H,TEKST2  
	 RST 3  
	 RET  
TEKST1 	 DB 'hexadecymalnie: @'        
SPACJA 	 DB 10,13,'@'       
TEKST2 	 DB 'binarnie: @'   
TEKST3 	 DB 'wprowadz_liczbe: ',10,13,'@'  
 
WPROWADZENIE  
LICZBA  
	 RST 2  
	 MVI B,'0'  
	 SUB B  
	 MOV B,A  
	 RST 2  
	 MVI C,'0'  
	 SUB C  
	 MOV C,A  
	 RST 2  
	 MVI D,'0'  
	 SUB D  
	 MOV D,A  
;CZY_LICZBA       
	 MVI A,02H  
	 SUB B  
	 JM LICZBA  
;CZY_BAJT       
	 MVI A,02H  
	 SUB B  
	 JZ CZY_BAJT  
	 JNZ PETLA2  
CZY_BAJT  
	 MVI A,05H  
	 SUB C  
	 JM LICZBA  
	 MVI A,05H  
	 SUB D  
	 JZ CZY_BAJT2  
	 JNZ PETLA2  
CZY_BAJT2 
	 MVI A,05H  
	 SUB D  
	 JM LICZBA  
PETLA2  
	 MVI E,100  
	 MVI A,00H  
MN_B  
	 ADD B  
	 DCR E  
	 JNZ MN_B  
	 MOV B,A  
	 MVI E,10  
	 MVI A,00H  
MN_C  
	 ADD C  
	 DCR E  
	 JNZ MN_C  
	 MOV C,A  
	 MVI A,00H  
	 ADD B  
	 ADD C  
	 ADD D  
	 RET  
